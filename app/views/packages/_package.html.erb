<div id="<%= dom_id package %>">
  <p>
    <strong>Name:</strong>
    <%= package.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= package.price %>
  </p>

  <p>
    <strong>Plan:</strong>
    <%= package.plan_id, :id, :name %>
  </p>

  <p>
    <strong>Additional:</strong>
    <%= package.additional_ids %>
  </p>

</div>
