<%= form_with(model: [@client, @subscription]) do |form| %>
  <% if subscription.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
        <% subscription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :client_name, style: "display: block" %>
    <%= text_field_tag :client_name, @client.name, readonly: true %>

    <%= form.hidden_field :client_id, value: @client.id %>
  </div>

  <div>
    <%= form.label :package_id, style: "display: block" %>
    <%= form.collection_select :package_id, Package.order(:name), :id, :name, { include_blank: true } %>
  </div>

  <div>
    <%= form.label :plan_id, style: "display: block" %>
    <%= form.collection_select :plan_id, Plan.order(:name), :id, :name, { include_blank: true } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
